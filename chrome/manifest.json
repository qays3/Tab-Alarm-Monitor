{
  "manifest_version": 3,
  "name": "Tab Alarm Monitor",
  "version": "1.0.0",
  "description": "Monitor tabs with custom alarms",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/sounds/alarm.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}